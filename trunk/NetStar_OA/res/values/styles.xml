<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <!-- start title样式 @author：张帅 -->
    <style name="textview_title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_title</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">23sp</item>
    </style>
    <!-- end title样式 @author：张帅 -->
    <!-- start 登录输入框的key父类 @author：张帅 -->
    <style name="login_activity_tv_input_key_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">3</item>
    </style>
    <!-- end 登录输入框的key父类 @author：张帅 -->
    <!-- start 登录输入框的key @author：张帅 -->
    <style name="login_activity_tv_input_key" parent="login_activity_tv_input_key_parent">
        <item name="android:textColor">@color/textcolor_1</item>
        <item name="android:textSize">@dimen/textsize_1</item>
    </style>
    <!-- end 登录输入框的key @author：张帅 -->
    <!-- start 登录输入框的value父类 @author：张帅 -->
    <style name="login_activity_et_input_value_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!-- end 登录输入框的value父类 @author：张帅 -->
    <!-- start 登录输入框的key @author：张帅 -->
    <style name="login_activity_et_input_value" parent="login_activity_et_input_value_parent">
        <item name="android:textColor">@color/textcolor_1</item>
        <item name="android:textSize">@dimen/textsize_1</item>
        <item name="android:padding">3dp</item>
        <item name="android:background">@drawable/bg_et</item>
    </style>
    <!-- end 登录输入框的key @author：张帅 -->
    <!-- start 主功能页面，tab的按钮 @author：张帅 -->
    <style name="main_layout_activity_tabhost_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/bg_main_layout_tab_button_unclicked</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/textsize_1</item>
    </style>
    <!-- end 主功能页面，tab的按钮 @author：张帅 -->


    <!-- 查询条件最外边框 -->
    <style name="daily_log_query_1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- 查询条件名称 -->
    <style name="daily_log_query_name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">3</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">3dp</item>
        <item name="android:text">日期</item>
        <item name="android:textColor">#FF000000</item>
        <item name="android:background">#FFCCCCCC</item>
        <item name="android:textSize">15sp</item>
    </style>
    <!-- 查询条件值 -->
    <style name="daily_log_query_value">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">3dp</item>
        <item name="android:text">2014-01-01</item>
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>